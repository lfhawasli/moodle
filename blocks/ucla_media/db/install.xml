<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/ucla_media/db" VERSION="20170810" COMMENT="XMLDB file for Moodle blocks/ucla_library_reserves"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="ucla_bruincast" COMMENT="Bruincast Database">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="term" TYPE="char" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="srs" TYPE="char" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="restricted" TYPE="char" LENGTH="12" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="bruincast_url" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="audio_url" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="podcast_url" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="date" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="term_srs" UNIQUE="false" FIELDS="term, srs"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="ucla_video_reserves" COMMENT="Contains the parsed video reserves data obtained from the datasource.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="term" TYPE="char" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="srs" TYPE="char" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="start_date" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="stop_date" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="class" TYPE="char" LENGTH="150" NOTNULL="true" SEQUENCE="false" COMMENT="Name of the class that the video belongs to."/>
        <FIELD NAME="instructor" TYPE="char" LENGTH="30" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="video_title" TYPE="char" LENGTH="200" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="video_url" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="subtitle" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="height" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="In pixels"/>
        <FIELD NAME="width" TYPE="int" LENGTH="4" NOTNULL="false" SEQUENCE="false" COMMENT="In pixels"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="termsrs" UNIQUE="false" FIELDS="term, srs"/>
        <INDEX NAME="courseid" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="uniquevideo" UNIQUE="true" FIELDS="term, srs, video_title"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="ucla_library_music_reserves" COMMENT="XMLDB table for Library Music Audio Reserves">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="term" TYPE="char" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="srs" TYPE="char" LENGTH="9" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="title" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="httpurl" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="rtmpurl" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="isvideo" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="metadata" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="performers" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="albumtitle" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="composer" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="termsrs" UNIQUE="false" FIELDS="term, srs"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>