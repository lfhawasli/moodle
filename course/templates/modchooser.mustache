        { key: 'setfavoritetools', component: 'moodle' },
        { key: 'showcategory', component: 'moodle' },
        {{! END UCLA MOD: CCLE-7143.}}
    ]).then(function(add, close) {
        Y.use('moodle-course-modchooser', function() {
            M.course.init_chooser({
                courseid: {{courseid}},
                {{! START UCLA MOD: CCLE-7143 - Reimplement CCLE-5967 Simplify activity chooser.}}
