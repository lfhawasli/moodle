require([
    'core/yui',
    'core/str'
], function(Y, Str) {
    Str.get_strings([
        { key: 'addresourceoractivity', component: 'moodle' },
        {{! START UCLA MOD: CCLE-7143 - Reimplement CCLE-5967 Simplify activity chooser.}}
