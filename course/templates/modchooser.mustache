                userpinnedtools: {{#quote}}{{userpinnedtools}}{{/quote}},
                defaulttools: {{#quote}}{{defaulttools}}{{/quote}},
                newmodchooser: {{#quote}}{{newmodchooser}}{{/quote}}
                {{! END UCLA MOD: CCLE-7143.}}
            });
        });
    });
});
