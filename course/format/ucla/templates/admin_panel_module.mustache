{{!
    @template format_ucla/admin_panel_module

    Dislpays admin panel module and associated links.

    Example context (json):
    {
        "text": "Admin panel Module Title",
        "children": [ // The links of the module.
            "text": "link text"
            "action": "link"
        ]
        "display": true,
    }
}}

{{#display}}
    <div class="col-md-4">
        <h4>{{text}}</h4>
        <ul class="list-unstyled m-l-2 admin-module">
        {{#children}}
                <li><a href="{{{action}}}">{{text}}</a></li>
        {{/children}}
        </ul>
    </div>
{{/display}}
