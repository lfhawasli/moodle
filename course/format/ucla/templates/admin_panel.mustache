{{!
    @template format_ucla/admin_panel

    Displays the admin panel as a list of grouped links in rows, three columns wide.

    Example context (json):
    {
        "node": {
            "text": "Root of nav menu, 'Course Administration',
            "key": "test0",
            "display": true,
            "children": [
                {
                    "text": "First default navigation tab",
                    "display": true,
                    "children": [] // rows and links for the first tab.
                    "firsttab": true // Used to display specific html for first tab.
                }
                {
                    "text": "An example navigation tab",
                    "display": true,
                    "children": [] // rows and links for this tab.
                    "tab": true // Used to distinguish this as a regular tab (not the first one).
                }
            ]
        }
    }
}}

<!-- hr below title of page. -->
<hr>
<div class="admin-panel">
    <ul class="nav nav-tabs" Arole="tablist">
        <!-- Display name of first tab, set in admin_panel.php. -->
        <li class="nav-item">
            <a class="nav-link {{node.active}}" href="#link{{node.key}}" data-toggle="tab" role="tab">{{node.text}}</a>
        </li>
        <!-- Delve into other tabs and retrieve title for nav-links. -->
        {{#node.children}}
            <!-- Check to see if this node group is a regular tab. -->
            {{#tab}}
                {{#display}}
                    {{^is_short_branch}}
                        <li class="nav-item">
                            <a class="nav-link" href="#link{{key}}" data-toggle="tab" role="tab">{{tabtext}}</a>
                        </li>
                    {{/is_short_branch}}
                {{/display}}
            {{/tab}}

            {{#myuclatab}}
                {{#display}}
                    {{^is_short_branch}}
                        <li class="nav-item">
                            <a class="nav-link {{active}}" href="#link{{key}}" data-toggle="tab" role="tab">{{tabtext}}</a>
                        </li>
                    {{/is_short_branch}}
                {{/display}}
            {{/myuclatab}}
        {{/node.children}}
    </ul>

    <div class="tab-content">
        <!-- Display admin panel modules that are in the first default nav tab. -->
        {{#node.children}}
            {{#courseadmin}}
                {{#children.count}}
                    <div class="tab-pane {{active}}" id="link{{node.key}}" role="tabpanel">
                        <div class="card">
                            <div class="card-block">
                                <div class="container">
                                    {{#children}}
                                        <div class="row admin-panel-row">
                                            {{#children}}
                                                {{> format_ucla/admin_panel_row }}
                                            {{/children}}
                                        </div>
                                    {{/children}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/children.count}}
            {{/courseadmin}}
        {{/node.children}}

        <!-- Create HTML for navigation tabs that are hidden in the other tabs. -->
        {{#node.children}}
            <!-- Make sure this node is a tab and that it is not the first tab. -->
            {{#tab}}
                {{#children.count}}
                    <div class="tab-pane" id="link{{key}}" role="tabpanel">
                        <div class="card">
                            <div class="card-block">
                                <div class="container">
                                    {{#children}}
                                        <div class="row admin-panel-row">
                                            {{#children}}
                                                {{> format_ucla/admin_panel_row }}
                                            {{/children}}
                                        </div>
                                    {{/children}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/children.count}}
            {{/tab}}
        {{/node.children}}

        {{#node.children}}
            {{#myuclatab}}
                <div class="tab-pane {{active}}" id="link{{key}}" role="tabpanel">
                    <div class="card">
                        <div class="card-block">
                            <table class="table table-striped">
                                <caption class="myucla-table-caption">MyUCLA Features</caption>
                                <tbody>
                                    {{#row}}
                                        <tr>
                                        <th scope="row">
                                            {{#firstcolumn}}
                                                <a href="{{{action}}}">{{text}}</a>
                                            {{/firstcolumn}}
                                        </th>
                                        {{#column}}
                                            <td><a href="{{{action}}}">{{text}}</a></td>
                                        {{/column}}
                                        </tr>
                                    {{/row}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {{/myuclatab}}
        {{/node.children}}
    </div>
</div>
