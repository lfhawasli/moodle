{{!
    Page header.
}}

<div class="env-{{ running_environment }}">
    <nav class="fixed-top pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex">
        <div class="header-main row">
            {{^hidenavigation}}
                <div class="nav-toggle" data-region="drawer-toggle">
                    {{> theme_uclashared/hamburger }}
                </div>
            {{/hidenavigation}}
            <div class="header-logo">
                {{> theme_uclashared/header_logo }}
            </div>
            <div class="header-login ml-auto mr-3 mb-2">
                <div class="header-btn-group logininfo d-flex" >
                    <div class="d-none d-lg-block">
                        {{{ output.search_box }}}
                    </div>
                    <!-- navbar_plugin_output -->
                    {{{ output.navbar_plugin_output }}}
                    <!-- help_feedback_link -->
                    {{{ output.help_feedback_link }}}
                    <!-- user_menu -->
                    {{{ output.user_menu }}}
                </div>
            </div>
        </div>
    </nav>
</div>
