{{!
    Page header.
}}

<header role="banner" class="pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex">
    <div class="wrapper row headroom headroom--top">
        <div class="header-top">
            <a class="ucla-url" href="http://www.ucla.edu" target=_blank>{{# str }} ucla, theme_uclashared {{/str}}</a>
            {{{ output.weeks_display }}}
        </div>
    </div>
    <div class="header-border visible-xs"></div>
    <div class="header-main row headroom headroom--top">
        <div class="nav-toggle" data-region="drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn pull-xs-left m-r-1 btn-secondary" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>
        <div class="header-logo">
            <a href="{{{ config.wwwroot }}}" >
                {{# pix }} ucla-logo, theme, ucla-logo {{/ pix }}
                <span class="logo-ccle">CCLE</span>               
            </a>
            <span class="logo-system-name-vertical-bar">| </span>
            <a class="logo-system-name" href="{{system_link}}">
            {{ system_name }}
            </a>
        </div>
        <div class="header-login">
            <div class="header-btn-group logininfo" >
                <!-- navbar_plugin_output -->
                {{{ output.navbar_plugin_output }}}
                <!-- help_feedback_link -->
                {{{ output.help_feedback_link }}}
                <!-- user_menu -->
                {{{ output.user_menu }}}
            </div>
        </div>
    </div>

</header>

