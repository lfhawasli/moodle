{{!
    UCLA MOD: CCLE-8465 - Added Bootstrap rounded class to textbox and button
}}

<div class="forumsearch">
    <form action="{{actionurl}}" class="form-inline">
        <input type="hidden" name="id" value="{{courseid}}">
        <div class="input-group">
            <div class="input-group-prepend">
            {{#helpicon}}
                {{>core/help_icon}}
            {{/helpicon}}
            </div>
            <label class="sr-only" for="search">{{#str}}search, forum{{/str}}</label>
            <div class="ucla-search search-wrapper">
                <button class="fa fa-search btn" id="searchforums" type="submit"></button>
                <input id="search" name="search" type="text" class="form-control ucla-search-input rounded" placeholder="{{#str}}searchbarplaceholder, forum{{/str}}" value="{{query}}">
            </div>
        </div>
    </form>
</div>
