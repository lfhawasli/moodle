{{!
    Displays the Week and Quarter on the front page.

    The quarter text can be empty if we are between terms (e.g. Between Spring/Summer).
}}
<div id="greeting-wrapper">
  <div id="greeting-week">
    <h1 id="greeting-header-text">{{{ week }}}</h1>
  </div>
{{# quarter }}
  <div id="greeting-quarter">
    <h3 id="greeting-subtext">{{{ quarter }}}</h3>
  </div>
{{/ quarter }}
</div>
